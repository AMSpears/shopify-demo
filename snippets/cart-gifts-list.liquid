{%- if settings.cart_type == 'drawer' -%}
  <div class="drawer__cart-gifts hidden">
    <h3 class="drawer__cart-gifts__title">{{ settings.cart_gifts_header }}</h3>
    <div class="drawer__cart-gifts__items">
      {%- for product in settings.cart_gifts_product_list -%}
        <div class="gift_item">
          <input 
            type="radio" 
            id="product_{{ product.variants[0].id }}" 
            name="gift_item" 
            value="{{ product.variants[0].id }}">
          <img src="{{ product.featured_image | img_url: 'small' }}" alt="{{ product.title }}" width="100" height="100">
          <label for="product_{{ product.variants[0].id }}">{{ product.title }}</label>
        </div>
      {%- endfor -%}
    </div>
  </div>
{%- endif -%} 
